    "version": "0.2.0",
    "configurations": [
        {
            "type": "gdb",
            "request": "launch",
            "name": "Launch Program",
            "target": "${workspaceFolder}/bin/tedit",
            "cwd": "${workspaceRoot}/bin",
            "valuesFormatting": "parseText"
        },
        {
            "name": "(gdb) Tedit",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/tedit",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/bin",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Tally",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/tally",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/bin",
            "environment": [],
            "externalConsole": false,
